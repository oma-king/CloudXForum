@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card login-logout-tab">
            <div class="card-header cardNew">
                <ul class="nav nav-tabs card-header-tabs cardHeaderNewTabs">
                    <li class="col-md-6 paddingBlock">
                        <a class="nav-link" href="/Identity/Account/Login">Login</a>
                    </li>
                    <li class="col-md-6 paddingBlock">
                        <a class="nav-link" href="/Identity/Account/Register">Register</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", false)

    <script>
    $(function () {
      var current = location.pathname;
    $('.nav-tabs li a').each(function(){
    var $this = $(this);
    if (current.indexOf($this.attr('href')) !== -1){
    $this.addClass('active');
    }
    })
    })
</script>

}