@model CloudXForum.UI.Models.Forum.AddForumModel
@{
    ViewData["Title"] = "Create";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create a new category on the forum
        </div>
    </div>
    <div class="row frontPageContent">
        <div id="createForumSection">
            <form asp-action="CreateForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="form-group">
                    <label asp-for="Title">Category</label>
                    <input asp-for="Title" class="form-control" required placeholder="Select category title" maxlength="50" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group>">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" required placeholder="Select category description" maxlength="150" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Upload category image</label><br />
                    <label class="btn btn-default btn-file">
                        Upload <input asp-for="ImageUpload" typeof="file" accept="image/*" style="display:none" />
                    </label>
                </div>
                <button type="submit" id="newFormBtn" class="btn btn-submitPost">Create</button>
            </form>
        </div>
    </div>
</div>