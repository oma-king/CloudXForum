@model CloudXForum.UI.Models.Forum.EditForumModel
@{
    ViewData["Title"] = "Change";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Change category on the forum
        </div>
    </div>
    <div class="row frontPageContent">
        <div id="createForumSection">
            <form asp-action="EditForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="form-group">
                    <label asp-for="Title">Category</label>
                    <input asp-for="Title" class="form-control" required placeholder="Change category title" maxlength="25" value="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group>">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" required placeholder="Description" maxlength="100" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div id="upload">
                    <table width="30%">
                        <tr>
                            <td>
                                <div class="forumLogo" style="background-image: url(@Model.ImageUrl)"></div>
                            </td>
                            <td>
                                <label class="btn btn-default btn-file">
                                    Upload <input asp-for="ImageUpload" typeof="file" accept="image/*" style="display:none" />
                                </label>
                            </td>
                        </tr>
                    </table>
                </div>
                <input asp-for="Id" type="hidden"/>
                <button type="submit" id="newFormBtn" class="btn btn-Update">Update</button>
            </form>
        </div>
    </div>
</div>